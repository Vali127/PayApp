<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PayApp"
             x:Class="PayApp.App"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
             
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="Styles/AppDefaultStyle.axaml" ></StyleInclude>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" ></StyleInclude>

    </Application.Styles>
             
    <Application.Resources>
        <SolidColorBrush x:Key="PrimaryBackground" Color="#323443" />
        <SolidColorBrush x:Key="SecondaryBackground" Color="#272830" />
        <SolidColorBrush x:Key="PrimaryTextColor" Color="#FFFFFF" />
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#272830" />
        <SolidColorBrush x:Key="HighlightColor" Color="#00E963" />
        <SolidColorBrush x:Key="HighlightBackgroundColor" Color="#00E963" Opacity="0.15" />
        <SolidColorBrush x:Key="ButtonBackgroundColor" Color="#000000" Opacity="0.05" />
        <SolidColorBrush x:Key="SecondaryHighlightBackgroundColor" Color="#2FAE00" Opacity="0.20" />
        <SolidColorBrush x:Key="SecondaryHighlightColor" Color="#2FAE00" />
        
        
        <!--For the font-->
        <FontFamily x:Key="NunitoBold" >/Assets/Fonts/Bold.ttf#Boldena</FontFamily>
        <FontFamily x:Key="Nunito" >/Assets/Fonts/Nunito-VariableFont_wght.ttf#Nunito</FontFamily>
        <FontFamily x:Key="Phosphor" >/Assets/Fonts/Phosphor.ttf#Phosphor</FontFamily>
        <FontFamily x:Key="PhosphorFill" >/Assets/Fonts/Phosphor-Fill.ttf#Phosphor#Phosphor-Fill</FontFamily>
    </Application.Resources>
             
</Application>