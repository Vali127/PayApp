<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource PrimaryBackground}" >
            <!-- Add Controls for Previewer Here -->
            
        </Border>
    </Design.PreviewWith>
    <!-- Add Styles Here -->
    
    <!-- Menu Button -->
    <Style Selector="Button" >
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}" ></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"></Setter>
        <Setter Property="CornerRadius" Value="5" ></Setter>
        <Setter Property="Padding" Value="7 0 0 0"></Setter>
    </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter" >
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}" ></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"></Setter>
    </Style>
    <Style Selector="Button:pressed /template/ ContentPresenter" >
        <Setter Property="Background" Value="{DynamicResource HighlightBackgroundColor}" ></Setter>
        <Setter Property="Foreground" Value="{DynamicResource HighlightColor}"></Setter>
    </Style>
    <Style Selector="Label.icon" >
       <Setter Property="FontFamily" Value="{DynamicResource PhosphorFill}" ></Setter>
    </Style>
    <!-- Active button style -->
    <Style Selector="Button.Active" >
        <Setter Property="Foreground" Value="{DynamicResource HighlightColor}" />
        <Setter Property="Background" Value="{DynamicResource HighlightBackgroundColor}" />
    </Style>
    <Style Selector="Button.Active:pointerover /template/ ContentPresenter" >
        <Setter Property="Foreground" Value="{DynamicResource HighlightColor}" />
        <Setter Property="Background" Value="{DynamicResource HighlightBackgroundColor}" />
    </Style>
    
    
    <!-- Gear Button -->
    <Style Selector="Button.gear" >
        <Setter Property="Foreground" Value="{DynamicResource SecondaryHighlightColor}" />
        <Setter Property="Background" Value="{DynamicResource SecondaryHighlightBackgroundColor}" />
        <Setter Property="Padding" Value="2 2 2 0" />
        <Setter Property="Margin" Value="5"/>
        <Setter Property="CornerRadius" Value="10" />
    </Style>
    <Style Selector="Button.gear:pointerover /template/ ContentPresenter" >
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="Background" Value="{DynamicResource SecondaryHighlightBackgroundColor}" />
        <Setter Property="Padding" Value="2 2 2 0 " />
        <Setter Property="CornerRadius" Value="10" />
    </Style>
    
    <!-- toggler Button -->
    <Style Selector="Button.toggler" >
        <Setter Property="FontFamily" Value="{DynamicResource Phosphor}"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}"/>
        <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
        <Setter Property="Padding" Value="2 2 2 2" />
        <Setter Property="Margin" Value="5" />
        <Setter Property="CornerRadius" Value="100"/>
    </Style>
    
    <!-- info box style -->
    <Style Selector="TextBlock.infoTitle" >
        <Setter Property="HorizontalAlignment" Value="Left" ></Setter>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" ></Setter>
        <Setter Property="FontSize" Value="20"></Setter>
        <Setter Property="FontFamily" Value="{DynamicResource NunitoBold}" ></Setter>
        <Setter Property="Margin" Value="0 0 0 10 " ></Setter>
        <Setter Property="TextAlignment" Value="Left" ></Setter>
    </Style>
    <Style Selector="TextBlock.infoDescription" >
        <Setter Property="Foreground" Value="{DynamicResource PrimaryTextColor}" ></Setter>
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="TextWrapping" Value="Wrap" ></Setter>
        <Setter Property="Width" Value="250" ></Setter>
        <Setter Property="TextAlignment" Value="Left" ></Setter>
    </Style>
    <Style Selector="Border.infoBox" >
        <Setter Property="Width" Value="295" ></Setter>
        <Setter Property="Background" Value="{DynamicResource SecondaryBackground}" ></Setter>
        <Setter Property="Padding" Value="25"></Setter>
        <Setter Property="CornerRadius" Value="6" ></Setter>
        <Setter Property="Margin" Value="10 10 50 10 " ></Setter>
    </Style>
    
</Styles>
